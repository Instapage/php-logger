{
    "name": "instapage/php-logger",
    "type": "library",
    "license": "proprietary",
    "description": "A library for standardized logs & metric format, based on monolog/monolog.",
    "scripts": {
        "lint": "phpcs",
        "lint:fix": "phpcbf",
        "test": "phpunit",
        "example": "php examples/basic-example.php"
    },
    "require": {
        "php": ">=7.3",
        "ext-json": "*",
        "psr/log": "^1",
        "monolog/monolog": "^2"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3",
        "dealerdirect/phpcodesniffer-composer-installer": "*",
        "phpcompatibility/php-compatibility": "^9",
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "psr-4": {
            "Instapage\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests\\unit\\src"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
